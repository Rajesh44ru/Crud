@model  IEnumerable<Category>
@{
    ViewData["Title"] = "Home Page";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 calss="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>&nbsp; &nbsp;Create New Category

        </a>        
        </div>
 </div>
 <br><br>
<table class="table table-bordered table-striped" style="width:100%">

    <thead>
        <tr>
         <th>
             Category Name
         </th>
         <th>
             Category Order
         </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr >
                <th width:40%>
                    @obj.Name
                </th>
                <th width:30%>
                    @obj.DisplayOrder
                </th>
            </tr>
        }
    </tbody>
</table>
</div>
